{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}
